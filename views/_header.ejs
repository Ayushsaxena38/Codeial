<header>
    <div id="cnt">
        <div id="title">
            <h3>
                <a href="/">Codeial</a>
                
            </h3>
        </div>
        <%if(locals.user){%>
            
            <div id="user-signin-signup">
                <div id="profile-pic-header">
                <%if(locals.user.avatar){%>
                        <img src="<%=locals.user.avatar%>" alt="">
                <%}else{%>
                    <img src="/images/default-avatar.png" alt="default-avatar">
                <%}%>
            </div>
                
                <h4>
                    <%= locals.user.name%>
                    <a href="/users/profile">Profile</a>
                </h4>
                    
            <%}else{%>
                <h4>
                    <a href="/users/login">Login</a> 
                    or 
                    <a href="/users/create">Register</a>
                </h4>
            
            </div>
        <%}%>
    </div>
    
</header>